<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.convertisseuryoutube.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MyTubep3"
                android:textSize="60dp"

                android:gravity="center"
                android:layout_marginTop="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To convert a video to mp3, insert your video link in the bar below"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginTop="40dp"
                android:id="@+id/eTlink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Your Link..."
                android:textSize="30sp"
                android:textColorHint="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            >

            <Button
                android:id="@+id/btnConvert"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Convert"
                android:layout_gravity="center_horizontal"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textSize="20dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="140dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Copyright Â© 2017 All rights reserved. "
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
